#register w "w|awk '/\^n/ {print \$1\" /etc/passwd\" }'|sort -u | xargs -n 2 grep\015"
#register z "alias zl='zfs list -o name,mountpoint,mounted,canmount -r'\015"
register l "export LS_COLORS=`echo \$LS_COLORS| sed 's/01;34/01;33/g'`\015"


